<div id="article-show">
  <% if user_signed_in? %>
    <header-component :is-signed-in-user="true"></header-component>
  <% else %>
    <header-component></header-component>
  <% end %>

  <p class="notice success-field"><%= notice %></p>
  <p class="alert error-field"><%= alert %></p>

  <article-show-component v-if="isActiveShow" :id="id"  @change-page="changePage"></article-show-component>
  <article-form-component v-if="isActiveEdit"
    :id="id"
    :permission-update="true"
    @change-page="changePage"
  ></article-form-component>
</div>

<script>
  new Vue({
    el: '#article-show',
    data: function(){
      return {
        id: <%= params[:id] %>,
        isActiveShow: true,
        isActiveEdit: false,
      }
    },
    methods: {
      changePage: function() {
        this.isActiveShow = !this.isActiveShow
        this.isActiveEdit = !this.isActiveEdit
      },
    }
  })
</script>
