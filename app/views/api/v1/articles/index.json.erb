<%
  array = @articles.map do |article|
    #時刻を表示させないために、DataWithZoneクラスからDateクラスに変換
    article_updated_at = article.updated_at.to_date
    {
      id: article.id,
      title: article.title,
      body: article.body,
      user: article.user,
      updated_at: l(article_updated_at, format: :long),
    }
  end
%>
<%= array.to_json.html_safe %>
